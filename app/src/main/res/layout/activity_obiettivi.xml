<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/obiettivi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ObiettiviActivity"
        android:background="@color/black">

    <!-- Trasparenza-->

    <ImageView
        android:id="@+id/backgroundImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        android:src="@drawable/leaftlogo"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="0dp" />


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="98dp"
        android:layout_height="81dp"
        android:layout_marginTop="92dp"
        android:contentDescription="Logo"
        android:scaleType="centerInside"
        android:src="@drawable/leaftlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wordImageView"
        android:layout_width="88dp"
        android:layout_height="57dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Scritta"
        android:scaleType="centerInside"
        android:src="@drawable/leaftwordmax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="278dp"
        android:layout_height="98dp"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="RENDIAMO I TUOI OBIETTIVI ANCORA PIÃ™ CONCRETI E REALI!"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="316dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>